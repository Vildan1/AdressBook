<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
   
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <link href="~/Content/DataTables/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.slim.js"></script>



    <nav class="navbar  navbar-expand-lg navbar-dark bg-danger" style="padding-left:620px;">
        
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
       
        <div class="collapse navbar-collapse" id="navbarSupportedContent ">
            <ul class="navbar-nav mr-auto"  >
                <li class="nav-item">
                    <a class="nav-link" href="~/Home/Index">Anasayfa</a>
                </li>
                <li class="nav-item mr-auto">
                    <a class="nav-link" href="~/Home/Add">Ekle</a>
                </li>


                <li class="nav-item mr-auto">
                    <a class="nav-link" href="~/User/Logout">Çıkış Yap</a>
                </li>
            </ul>
        </div>
    </nav>

    <br/>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>


    @RenderSection("scripts", required: false)
</body>
</html>
